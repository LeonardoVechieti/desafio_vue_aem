<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Propiedades"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items
            jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items
                    jcr:primaryType="nt:unstructured">
                    <!-- titulo -->
                    <title
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Título"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                        <items 
                            jcr:primaryType="nt:unstructured">
                            <textTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Texto do título:"
                                name="./textTitle"/>
                            <fontTitle 
                                cq-msm-lockable="./fontTitle"
                                defaultValue="SpaceMono"
                                fieldLabel="Selecione a fonte do texto:"
                                jcr:primaryType="nt:unstructured"
                                name="./fontTitle"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                value="false">
                                <items jcr:primaryType="nt:unstructured">
                                        <SpaceMono jcr:primaryType="nt:unstructured" text="SpaceMono" value="space-mono"/>
                                        <Inconsolata jcr:primaryType="nt:unstructured" text="Inconsolata" value="inconsolata"/>
                                        <Montserrat jcr:primaryType="nt:unstructured" text="Montserrat" value="montserrat"/>      
                                </items>
                            </fontTitle> 
                            <nivelTitle 
                                cq-msm-lockable="./nivelTitle"
                                defaultValue="h1"
                                fieldLabel="Selecione o nível do texto:"
                                jcr:primaryType="nt:unstructured"
                                name="./nivelTitle"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                value="false">
                                <items jcr:primaryType="nt:unstructured">
                                        <h1 jcr:primaryType="nt:unstructured" text="Nível 1 (H1)" value="h1"/>
                                        <h2 jcr:primaryType="nt:unstructured" text="Nível 2 (H2)" value="h2"/>
                                        <H3 jcr:primaryType="nt:unstructured" text="Nível 3 (H3)" value="h3"/>
                                </items>
                            </nivelTitle> 
                        </items>
                    </title>
                    <!-- conteudo -->
                    <content
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Conteúdo"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                        <items 
                            jcr:primaryType="nt:unstructured">
                           <textDescription
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Texto do Conteúdo"
                                name="./textDescription"/>
                            <fontText 
                                cq-msm-lockable="./fontText"
                                defaultValue="SpaceMono"
                                fieldLabel="Selecione a fonte do texto:"
                                jcr:primaryType="nt:unstructured"
                                name="./fontText"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                value="false">
                                <items jcr:primaryType="nt:unstructured">
                                        <SpaceMono jcr:primaryType="nt:unstructured" text="SpaceMono" value="space-mono"/>
                                        <Inconsolata jcr:primaryType="nt:unstructured" text="Inconsolata" value="inconsolata"/>
                                        <Montserrat jcr:primaryType="nt:unstructured" text="Montserrat" value="montserrat"/>      
                                </items>
                            </fontText> 
                        </items>
                    </content>
                    <!-- botoes -->
                    <buttons
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Botão"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                        <items 
                            jcr:primaryType="nt:unstructured">
                            <textButton
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Texto do Botão"
                                name="./textButton"/>
                            <textSize
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                fieldLabel="Tamanho do texto (em px)"
                                emptyText="Padrão: 24"
                                name="./textSize"/>
                            <textColor
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                fieldLabel="Cor do texto"
                                showDefaultColors="false"
                                emptyText="Padrão: #000000"
                                name="./textColor">
                                <items
                                    jcr:primaryType="nt:unstructured">
                                    <black
                                        jcr:primaryType="nt:unstructured"
                                        value="#000000"/>
                                    <blue
                                        jcr:primaryType="nt:unstructured"
                                        value="#0000FF"/>
                                    <green
                                        jcr:primaryType="nt:unstructured"
                                        value="#00FF00"/>
                                    <red
                                        jcr:primaryType="nt:unstructured"
                                        value="#FF0000"/>
                                </items>
                            </textColor>
                        </items>
                    </buttons>
                    <teste
                        jcr:primaryType="nt:unstructured"
                        jcr:title="texte"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                        <items 
                            jcr:primaryType="nt:unstructured">
                            <buttonContent
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Conteúdo"
                                emptyText="Texto que será exibido"
                                name="./buttonContent"/>
                            <buttonType
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Estilo do Botão"
                                name="./buttonType">
                                <items
                                    jcr:primaryType="nt:unstructured">
                                    <primary
                                        jcr:primaryType="nt:unstructured"
                                        text="Primário"
                                        value="primary"/>
                                    <secundary
                                        jcr:primaryType="nt:unstructured"
                                        text="Secundário"
                                        value="secondary"/>
                                    <terciary
                                        jcr:primaryType="nt:unstructured"
                                        text="Terciário"
                                        value="terciary"/>
                                </items>
                            </buttonType>
                            <buttonFontSize
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                fieldLabel="Tamanho do texto do Botão (em px)"
                                emptyText="Padrão 14"
                                name="./buttonFontSize"/>
                        </items>
                    </teste>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>