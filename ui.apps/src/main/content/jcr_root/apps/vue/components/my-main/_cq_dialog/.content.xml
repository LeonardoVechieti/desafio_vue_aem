<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Propiedades"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items
            jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items
                    jcr:primaryType="nt:unstructured">
                    <!-- titulo -->
                    <title
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Título"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                        <items 
                            jcr:primaryType="nt:unstructured">
                            <textTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Texto do título:"
                                name="./textTitle"/>
                            <fontTitle 
                                cq-msm-lockable="./fontTitle"
                                defaultValue="SpaceMono"
                                fieldLabel="Selecione a fonte do texto:"
                                jcr:primaryType="nt:unstructured"
                                name="./fontTitle"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                value="false">
                                <items jcr:primaryType="nt:unstructured">
                                        <SpaceMono jcr:primaryType="nt:unstructured" text="SpaceMono" value="space-mono"/>
                                        <Inconsolata jcr:primaryType="nt:unstructured" text="Inconsolata" value="inconsolata"/>
                                        <Montserrat jcr:primaryType="nt:unstructured" text="Montserrat" value="montserrat"/>      
                                </items>
                            </fontTitle> 
                            <nivelTitle 
                                cq-msm-lockable="./nivelTitle"
                                defaultValue="h1"
                                fieldLabel="Selecione o nível do texto:"
                                jcr:primaryType="nt:unstructured"
                                name="./nivelTitle"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                value="false">
                                <items jcr:primaryType="nt:unstructured">
                                        <h1 jcr:primaryType="nt:unstructured" text="Nível 1 (H1)" value="h1"/>
                                        <h2 jcr:primaryType="nt:unstructured" text="Nível 2 (H2)" value="h2"/>
                                        <H3 jcr:primaryType="nt:unstructured" text="Nível 3 (H3)" value="h3"/>
                                </items>
                            </nivelTitle>
                            <textColor
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                fieldLabel="Cor do texto"
                                showDefaultColors="false"
                                name="./titleColor">
                                <items
                                    jcr:primaryType="nt:unstructured">
                                    <preto
                                        jcr:primaryType="nt:unstructured"
                                        value="#000000"/>
                                    <azul
                                        jcr:primaryType="nt:unstructured"
                                        value="#0000FF"/>
                                    <verde
                                        jcr:primaryType="nt:unstructured"
                                        value="#00FF00"/>
                                    <vermelho
                                        jcr:primaryType="nt:unstructured"
                                        value="#FF0000"/>
                                    <cinza
                                        jcr:primaryType="nt:unstructured"
                                        value="#898686"/>
                                    <branco
                                        jcr:primaryType="nt:unstructured"
                                        value="#FFFFFF"/>
                                    <rosa
                                        jcr:primaryType="nt:unstructured"
                                        value="#FF00FF"/>
                                    <laranja
                                        jcr:primaryType="nt:unstructured"
                                        value="#FFA500"/>
                                    <roxo 
                                        jcr:primaryType="nt:unstructured"
                                        value="#800080"/>
                                    <marrom 
                                        jcr:primaryType="nt:unstructured"
                                        value="#8B4513"/>
                                    <azul-claro
                                        jcr:primaryType="nt:unstructured"
                                        value="#00FFFF"/>
                                    <verde-claro
                                        jcr:primaryType="nt:unstructured"
                                        value="#00FF00"/>
                                    <vermelho-claro
                                        jcr:primaryType="nt:unstructured"
                                        value="#FF0000"/>
                                    <cinza-claro
                                        jcr:primaryType="nt:unstructured"
                                        value="#C0C0C0"/>
                                    <laranja-claro
                                        jcr:primaryType="nt:unstructured"
                                        value="#e6d218"/>
                                </items>
                            </textColor> 
                        </items>
                    </title>
                    <!-- conteudo -->
                    <content
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Conteúdo"
